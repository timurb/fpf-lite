{
  "include": [
    "**/*.md",
    "**/*.py",
    "**/*.yaml",
    "README*",
    "LICENSE*",
    "repomix.config.*",
    ".gitignore",
    ".repomixignore"
  ],
  "ignore": {
    "useGitignore": true,
    "useDotIgnore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "_repo-snapshot/**",
      "**/.git/**",
      ".vscode/**"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "input": {
    "maxFileSize": 5000000
  },
  "output": {
    "filePath": "_repo-snapshot/repo-snapshot.xml",
    "style": "xml",
    "parsableStyle": true,
    "compress": false,
    "fileSummary": true,
    "directoryStructure": true,
    "fullDirectoryStructure": true,
    "emptyDirectories": true,
    "files": true,
    "showLineNumbers": false,
    "truncateBase64": true,
    "copyToClipboard": false
  }
}
